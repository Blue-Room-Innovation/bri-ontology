@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@prefix schema: <https://schema.org/> .
@prefix bri-recycling: <https://raw.githubusercontent.com/Blue-Room-Innovation/bri-ontology/main/ontology/v0.1/recycling.ttl#> .
@prefix untp-core: <https://test.uncefact.org/vocabulary/untp/core/0/> .

############################
# Node Shape principal
############################

bri-recycling:RecyclingOrganisationShape
  a sh:NodeShape ;
  sh:targetClass bri-recycling:Recycler ;

  ##########################
  # Identificació
  ##########################

  sh:property [
    sh:path bri-recycling:managerCode ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;

  sh:property [
    sh:path bri-recycling:nimaCode ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;

  sh:property [
    sh:path schema:name ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;

  ##########################
  # Adreça (literals)
  ##########################

  sh:property [
    sh:path schema:streetAddress ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
  ] ;

  sh:property [
    sh:path schema:addressLocality ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
  ] ;

  sh:property [
    sh:path schema:postalCode ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
  ] ;

  ##########################
  # Contacte (opcional)
  ##########################

  sh:property [
    sh:path schema:telephone ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
  ] ;

  sh:property [
    sh:path schema:faxNumber ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
  ] ;

  sh:property [
    sh:path schema:email ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
  ] ;

  sh:property [
    sh:path schema:url ;
    sh:nodeKind sh:IRI;
    sh:maxCount 1 ;
  ] ;

  ##########################
  # Localització (WGS84)
  ##########################

  sh:property [
    sh:path schema:latitude;
    sh:datatype xsd:double ;
    sh:minInclusive -90 ;
    sh:maxInclusive 90 ;
    sh:maxCount 1 ;
  ] ;

  sh:property [
    sh:path schema:longitude ;
    sh:datatype xsd:double ;
    sh:minInclusive -180 ;
    sh:maxInclusive 180 ;
    sh:maxCount 1 ;
  ] ;

  ##########################
  # Conformitat normativa
  ##########################

  sh:property [
    sh:path bri-recycling:adaptedToRD1102015 ;
    sh:or (
      [ sh:datatype xsd:boolean ]
      [ sh:nodeKind sh:IRI ]
    ) ;
    sh:maxCount 1 ;
  ] ;


  ##########################
  # Activitat
  ##########################

  sh:property [
    sh:path bri-recycling:wasteTreatmentActivity ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
  ] .
