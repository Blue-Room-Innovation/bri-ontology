{
  "name": "dataspace-ontology-tools",
  "version": "0.1.0",
  "description": "Auto-generation tools for DataSpace ontology artifacts",
  "private": true,
  "scripts": {
    "cli": "node scripts/run-python.js scripts/ontology_cli.py",
    "help": "node scripts/run-python.js scripts/ontology_cli.py --help",
    "validate:owl": "node scripts/run-python.js scripts/ontology_cli.py validate owl",
    "validate:owl:quiet": "node scripts/run-python.js scripts/ontology_cli.py validate owl --quiet",
    "validate:owl:with-codelists": "node scripts/run-python.js scripts/ontology_cli.py validate owl --include-codelists",
    "validate:shacl": "node scripts/run-python.js scripts/ontology_cli.py validate shacl",
    "validate:all": "npm run validate:owl:with-codelists && npm run validate:shacl",
    "generate:types": "node scripts/run-python.js scripts/ontology_cli.py generate types",
    "generate:types:verbose": "node scripts/run-python.js scripts/ontology_cli.py generate types --verbose",
    "generate:wiki": "node scripts/run-python.js scripts/ontology_cli.py generate wiki",
    "generate:wiki:with-codelists": "node scripts/run-python.js scripts/ontology_cli.py generate wiki --include-codelists",
    "generate:wiki:verbose": "node scripts/run-python.js scripts/ontology_cli.py generate wiki --verbose",
    "generate:all": "npm run generate:types && npm run generate:wiki",
    "convert:shacl": "node scripts/run-python.js scripts/ontology_cli.py convert shacl",
    "convert:ts": "node scripts/run-python.js scripts/ontology_cli.py convert ts",
    "build": "npm run generate:types",
    "build:all": "npm run validate:all && npm run generate:all",
    "release:version": "node scripts/run-python.js scripts/release-version.py",
    "release:all": "node scripts/run-python.js scripts/release-version.py --all",
    "config:show": "node scripts/run-python.js scripts/show-config.py"
  },
  "dependencies": {
    "json-schema-to-typescript": "^14.1.0"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.8.0"
  }
}
