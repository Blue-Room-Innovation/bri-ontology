@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix schema: <http://schema.org/> .
@prefix dwp: <https://raw.githubusercontent.com/Blue-Room-Innovation/bri-ontology/main/ontology/v0.1/digitalWastePassport.ttl#> .
@prefix dmwp: <https://raw.githubusercontent.com/Blue-Room-Innovation/bri-ontology/main/ontology/v0.1/digitalMarpolWastePassport.ttl#> .
@prefix ex: <https://example.org/invalid/> .

# INVALID examples for SHACL testing on waste-shapes.ttl
# Each block documents the expected violation(s).

#################################################################
# 1. DigitalWastePassport sin issued (sh:minCount 1 violado)
#################################################################
ex:badDigitalWastePassport a dwp:DigitalWastePassport ;
  dct:publisher ex:orgPublisher ;
  dwp:credentialSubject ex:badWastePassport .

ex:orgPublisher a schema:Organization ; schema:name "Org Publisher" .

#################################################################
# 2. WastePassport sin waste (sh:minCount 1 violado)
#################################################################
ex:badWastePassport a dwp:WastePassport ;
  dct:identifier "WP-123" .

#################################################################
# 3. Waste sin nombre (schema:name minCount 1)
#################################################################
ex:badWaste a dwp:Waste ;
  dct:description "Waste without name" .

#################################################################
# 4. DigitalMarpolWastePassport sin credentialSubject
#################################################################
ex:badDigitalMarpolWastePassport a dmwp:DigitalMarpolWastePassport ;
  dct:issued "2025-11-11T10:00:00Z"^^xsd:dateTime ;
  dct:publisher ex:orgPublisher .

#################################################################
# 5. MarpolWastePassport sin waste
#################################################################
ex:badMarpolWastePassport a dmwp:MarpolWastePassport .

#################################################################
# 6. MarpolWaste with incorrect arrivalPort format (UN/LOCODE pattern)
#################################################################
ex:badMarpolWaste a dmwp:MarpolWaste ;
  dmwp:ship ex:badShip ;
  dmwp:residue ex:badResidue ;
  dmwp:arrivalPort "ES-BCN" ; # should be ESBCN
  dmwp:nextPlannedDeliveryPort "12345" .

#################################################################
# 7. Ship with invalid IMO number (not 7 digits) and invalid flag
#################################################################
ex:badShip a dmwp:Ship ;
  dmwp:imoNumber "1234" ; # should have 7 digits
  dmwp:name "Vessel X" ;
  dmwp:flag "ESPA" . # should be ISO3166-1 Alpha-2 code

#################################################################
# 8. ResidueInformation sin typeCode y con dischargeMeans fuera de lista
#################################################################
ex:badResidue a dmwp:ResidueInformation ;
  dmwp:subtypeCode "ZTH01" ;
  dmwp:dischargeMeans "ZZZ" ; # not in (ZTE,ZTD,ZTC,ZTB)
  dmwp:quantityToDeliver ex:badMeasure .

# Correct measure but the shape requires typeCode
ex:badMeasure a dmwp:Measure ;
  dmwp:value "100"^^xsd:decimal .

#################################################################
# 9. ResidueInformation with multiple quantities (exclusive OR violation)
#################################################################
ex:badResidueMultiple a dmwp:ResidueInformation ;
  dmwp:typeCode "ZTH" ;
  dmwp:quantityToDeliver ex:measure1 ;
  dmwp:quantityRemainingOnBoard ex:measure2 ;
  dmwp:estimatedGenerated ex:measure3 .

ex:measure1 a dmwp:Measure ; dmwp:value "10"^^xsd:decimal .
ex:measure2 a dmwp:Measure ; dmwp:value "5"^^xsd:decimal .
ex:measure3 a dmwp:Measure ; dmwp:value "3"^^xsd:decimal .

#################################################################
# 10. AuthorizedParty sin identifier
#################################################################
ex:badAuthorizedParty a dmwp:AuthorizedParty .

#################################################################
# 11. InvolvedParty with empty role (string expected, would allow additional test if datatype is added)
#################################################################
ex:badInvolvedParty a dmwp:InvolvedParty ;
  dmwp:role "" .

# Note: Some cases depend on future stricter validation (flag against ISO list, ports against complete UN/LOCODE).
